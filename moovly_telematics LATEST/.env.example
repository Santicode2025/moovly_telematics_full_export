# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/moovly_telematics

# Session Secret (Generate a secure random string)
SESSION_SECRET=change-this-to-a-secure-random-string-in-production

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=5000

# Object Storage (Optional - for file uploads and images)
DEFAULT_OBJECT_STORAGE_BUCKET_ID=
PUBLIC_OBJECT_SEARCH_PATHS=
PRIVATE_OBJECT_DIR=

# Firebase Configuration (Optional - for push notifications)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_AUTH_DOMAIN=

# Web Push Notifications (Optional)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:your-email@example.com

# SMS Service (Optional - for driver notifications)
# Options: twilio, sendgrid, or leave empty for mock service
SMS_SERVICE=

# Twilio Configuration (if using Twilio for SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Email Service (Optional - for email notifications)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@moovly.com

# Google Maps API (Optional - for geocoding and maps)
VITE_GOOGLE_MAPS_API_KEY=

# Development Settings
VITE_API_BASE_URL=http://localhost:5000

# Production Settings (uncomment for production)
# VITE_API_BASE_URL=https://your-production-domain.com
# DATABASE_URL=postgresql://prod-user:prod-pass@prod-host:5432/prod-db
# NODE_ENV=production
